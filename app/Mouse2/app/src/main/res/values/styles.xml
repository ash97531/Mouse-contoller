<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!--        Overriding some colours-->
        <item name="colorPrimary" >@color/purple_light</item>
        <item name="colorPrimaryDark" >@color/purple_dark</item>
        <item name="android:textColorPrimary" >@color/white</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#fff</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="InstructionView">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">18dp</item>
        <item name="android:paddingLeft">4dp</item>
    </style>

    <style name="InstructionHeading">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">24dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="KeyBoardSqButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">1.5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/mouse_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>