        app:layout_constraintEnd_toStartOf="@+id/left_arrow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/alt_2"
        app:layout_constraintTop_toBottomOf="@+id/comma" />

    <ImageButton
        android:id="@+id/left_arrow"
        style="@style/KeyBoardSqButton"
