        style="@style/KeyBoardSqButton"
        android:text="ALT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ctrl_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/spacebar"
        app:layout_constraintTop_toBottomOf="@+id/m_btn" />

